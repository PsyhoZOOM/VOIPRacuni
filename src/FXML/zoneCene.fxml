                        <TableColumn fx:id="cTelekomCena" prefWidth="75.0" text="Telekom cena"/>
                        <TableColumn fx:id="cRazlika" prefWidth="75.0" text="Razlika"/>
                        <TableColumn fx:id="cCena" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Cena"/>
                        <TableColumn fx:id="cPDV" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="PDV"/>
                        <TableColumn fx:id="cCenaPDV" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                     text="Cena+PDV"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
