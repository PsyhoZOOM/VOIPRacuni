<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="600.0" minWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.yuvideo.voipRacuni.Controllers.korisniciWin">
    <children>
        <ToolBar VBox.vgrow="ALWAYS">
            <items>
                <Button fx:id="bNovKorisnik" mnemonicParsing="false" onAction="#novKorisnik" text="Nov" />
                <Button fx:id="bEditKorisnik" mnemonicParsing="false" onAction="#editKorisnik" text="Izmena" />
                <Button fx:id="bObrisiKorisnik" mnemonicParsing="false" onAction="#obrisiKorinisk" text="Obriši" />
                <Pane HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="bUplate" layoutX="37.0" mnemonicParsing="false" onAction="#bshowUplate" text="Uplate" />
                    </children>
                </Pane>
                <TextField fx:id="tTrazi" />
                <Button fx:id="bTrazi" mnemonicParsing="false" onAction="#traziKorisnika" text="Trazi" />
            </items>
        </ToolBar>
        <TableView fx:id="tblKorisnici" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="cCustomerID" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="cBrojTelefona" prefWidth="75.0" text="Broj Telefona" />
                <TableColumn fx:id="cPaket" prefWidth="75.0" text="Paket" />
                <TableColumn fx:id="cIme" prefWidth="75.0" text="Ime i Prezime" />
            <TableColumn fx:id="cFirma" prefWidth="75.0" text="Firma" />
                <TableColumn fx:id="cAdresa" prefWidth="75.0" text="Adresa" />
                <TableColumn fx:id="cMesto" prefWidth="75.0" text="Mesto" />
                <TableColumn fx:id="cPostBr" prefWidth="75.0" text="Poštanski broj" />
                <TableColumn fx:id="cBrUgovora" prefWidth="75.0" text="Broj ugovora" />
                <TableColumn fx:id="cPozivNaBroj" prefWidth="75.0" text="Poziv na broj" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
